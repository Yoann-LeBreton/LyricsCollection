<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="song"
            type="fr.yggz.android.lyricscollection.models.ui.Song" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="8dp">
    <RelativeLayout
        android:id="@+id/item_song_zoneclick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_song_fav"
        android:layout_marginEnd="16dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/item_song_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_song_title"
        android:layout_marginEnd="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:imageUrl="@{song.thumbnailUrl}"/>
    <TextView
        android:id="@+id/item_song_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_song_image"
        app:layout_constraintEnd_toStartOf="@id/item_song_fav"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@{song.title}"
        tools:text="Album nÂ°98"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_song_fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_song_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@{song.favorite ? @drawable/ic_star_full : @drawable/ic_star_empty}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_star_empty"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>